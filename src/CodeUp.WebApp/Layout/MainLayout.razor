@inherits LayoutComponentBase

<MudThemeProvider @ref="_mudThemeProvider" @bind-IsDarkMode="_isDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Color="Color.Inherit" Edge="Edge.Start" OnClick="ToggleDrawer" /> CodeUp Academy <MudSpacer />
        <MudMenu AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter" ActivationEvent="@MouseEvent.MouseOver">
            <ActivatorContent>
                <MudButton Variant="Variant.Text" Color="Color.Primary" StartIcon="@Icons.Material.Outlined.ManageAccounts">Account</MudButton>
            </ActivatorContent>
            <ChildContent>
                <MudNavLink Href="/">Inicio</MudNavLink>
                <MudNavLink Href="/register">Register</MudNavLink>
            </ChildContent>
        </MudMenu>
    </MudAppBar>
    <MudMainContent>
        <MudContainer Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
@code
{
    private bool _isDrawerOpened = true;
    private MudThemeProvider _mudThemeProvider = null!;
    private bool _isDarkMode = true;

    private void ToggleDrawer()
    {
        _isDrawerOpened = !_isDrawerOpened;
    }
}