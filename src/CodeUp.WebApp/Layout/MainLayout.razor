@inherits LayoutComponentBase

<MudThemeProvider @ref="_mudThemeProvider" @bind-IsDarkMode="_isDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Color="Color.Inherit" Edge="Edge.Start" OnClick="ToggleDrawer" /> CodeUp Academy <MudSpacer />
        <MudMenu AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter" ActivationEvent="@MouseEvent.MouseOver">
            <ActivatorContent>
                <MudButton Variant="Variant.Text" Color="Color.Primary">Account</MudButton>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem Label="Login" OnClick="NavigateToLogin" />
                <MudMenuItem Label="Register" OnClick="NavigateToRegister" />
            </ChildContent>
        </MudMenu>
    </MudAppBar>
    <MudMainContent>
        <MudContainer Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    [Inject]
    public NavigationManager Navigation { get; set; } = default!;

    private bool _isDrawerOpened = true;
    private MudThemeProvider _mudThemeProvider = null!;
    private bool _isDarkMode = true;

    private void ToggleDrawer()
    {
        _isDrawerOpened = !_isDrawerOpened;
    }

    private void NavigateToLogin()
    {
        Navigation.NavigateTo("/login");
    }

    private void NavigateToRegister()
    {
        Navigation.NavigateTo("/register");
    }
}