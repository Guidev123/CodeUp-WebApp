@page "/register"
@layout HeadlessLayout
@inherits RegisterPage

<PageTitle>CodeUp Academy - Register</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex justify-center pb-3 pt-3">
                <a href="/"><img src="images/logo.jpg" alt="Logo" width="250" /></a>
            </div>
            <h1 class="d-flex justify-center">CodeUp Academy</h1>

            <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
                <ValidationSummary />
                <DataAnnotationsValidator />

                <MudTextField Class="mb-4" Variant="Variant.Outlined" T="string" Label="First Name" HelperText="Required Field" InputType="InputType.Text" For="@(() => InputModel.FirstName)" @bind-Value="InputModel.FirstName" />
                <MudTextField Class="mb-4" Variant="Variant.Outlined" T="string" Label="Last Name" HelperText="Required Field" InputType="InputType.Text" For="@(() => InputModel.LastName)" @bind-Value="InputModel.LastName" />
                <MudTextField Class="mb-4" Variant="Variant.Outlined" T="string" Label="E-mail" HelperText="Required Field" InputType="InputType.Email" For="@(() => InputModel.Email)" @bind-Value="InputModel.Email" />
                <MudTextField Class="mb-4" Variant="Variant.Outlined" T="string" Label="Document" HelperText="Required Field" InputType="InputType.Text" For="@(() => InputModel.Document)" @bind-Value="InputModel.Document" />
                <MudTextField Class="mb-4" Variant="Variant.Outlined" T="string" Label="Phone" HelperText="Required Field" InputType="InputType.Telephone" For="@(() => InputModel.Phone)" @bind-Value="InputModel.Phone" />
                <MudDatePicker Class="mb-4" Label="Birth Date" @bind-Date="@InputModel.BirthDate" Format="dd/MM/yyyy" Variant="Variant.Outlined" />

                <MudFileUpload T="IBrowserFile" FilesChanged="UploadFilesAsync" Class="mb-4">
                    <ActivatorContent>
                        <MudButton Variant="Variant.Outlined"
                                   Color="Color.Primary"
                                   StartIcon="@Icons.Material.Filled.InsertPhoto">
                            Profile Picture
                        </MudButton>
                    </ActivatorContent>
                </MudFileUpload>

                <MudTextField Class="mb-4" Variant="Variant.Outlined" T="string" Label="Password" HelperText="Required Field" InputType="InputType.Password" For="@(() => InputModel.Password)" @bind-Value="InputModel.Password" />
                <MudTextField Class="mb-4" Variant="Variant.Outlined" T="string" Label="Confirm Password" HelperText="Required Field" InputType="InputType.Password" For="@(() => InputModel.ConfirmPassword)" @bind-Value="InputModel.ConfirmPassword" />

                <div class="d-flex mt-8">
                    @if (IsBusy)
                    {
                        <MudProgressCircular Color="Color.Info" Indeterminate="true" />
                    }
                    else
                    {
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Register</MudButton>
                        <MudSpacer />
                        <MudButton Href="/login" Variant="Variant.Outlined" EndIcon="@Icons.Material.Sharp.AccessibilityNew" Color="Color.Primary">Already a member?</MudButton>
                    }
                </div>
            </EditForm>

        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    private async Task UploadFilesAsync(IBrowserFile file)
    {
        var image = file;
        if (file != null)
        {
            using var stream = file.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024);
            using var memoryStream = new MemoryStream();
            await stream.CopyToAsync(memoryStream);
            InputModel.ProfilePicture = Convert.ToBase64String(memoryStream.ToArray());
        }
    }
}
